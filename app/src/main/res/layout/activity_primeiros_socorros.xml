<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.primeirossocorros.PrimeirosSocorros">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fundo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:theme="@android:style/ButtonBar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="COMO AGIR"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />
    <Button

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:textColor="#e6ff02"
    android:onClick=""
    android:text="DESMAIO"
    android:textSize="40dp"
    android:visibility="visible"
    android:id="@+id/button2"
    android:theme="@android:style/ButtonBar"
    android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textColor="#e6ff02"
        android:onClick=""
        android:textSize="40dp"
        android:text="EPILEPSIA"
        android:visibility="visible"
        android:id="@+id/button7"
        android:theme="@android:style/ButtonBar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textColor="#e6ff02"
        android:onClick=""
        android:text="PARADA CARDIACA"
        android:textSize="40dp"
        android:visibility="visible"
        android:id="@+id/button5"
        android:theme="@android:style/ButtonBar"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
